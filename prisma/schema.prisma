generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  
  bookmarks Bookmark[]
  collections Collection[]
}

model Collection {
  id        Int     @id @default(autoincrement())
  name      String
  userId    Int
  createdAt DateTime @default(now())
  
  user      User @relation(fields: [userId], references: [id])
  bookmarks Bookmark[]
}

model Bookmark {
  id            Int     @id @default(autoincrement())
  url           String
  title         String
  description   String?
  userId        Int
  collectionId  Int?
  tags          String[] @default([])
  createdAt     DateTime @default(now())
  
  user          User @relation(fields: [userId], references: [id])
  collection    Collection? @relation(fields: [collectionId], references: [id])
}
